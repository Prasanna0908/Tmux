############################################################
# GENERAL
############################################################

set -g default-terminal "tmux-256color"
set -ga terminal-overrides ",xterm-256color:Tc"

set -sg escape-time 0
set -g mouse on

set -g base-index 1
setw -g pane-base-index 1
set -g renumber-windows on

set -g history-limit 50000
setw -g xterm-keys on

############################################################
# PANE LOOK (NO TOP BAR)
############################################################

set -g pane-border-style fg=colour238
set -g pane-active-border-style fg=colour81

# IMPORTANT: no pane border status
set -g pane-border-status off

############################################################
# STATUS BAR (NOW AT TOP)
############################################################

set -g status on
set -g status-position top
set -g status-interval 10

set -g status-style bg=colour234,fg=colour248

# Left: session name
set -g status-left-length 40
set -g status-left "#[fg=colour81,bold]   #S #[default]"

# Windows (tabs)
setw -g window-status-style fg=colour245,bg=colour234
setw -g window-status-current-style fg=colour234,bg=colour81,bold

setw -g window-status-format " #I:#W "
setw -g window-status-current-format " #I:#W "

############################################################
# SVN INTEGRATION (QUIET)
############################################################

set -g @svn_branch 'svn info 2>/dev/null | sed -n "s|^URL: .*/||p"'
set -g @svn_dirty 'svn st -q 2>/dev/null | grep -q . && echo "●"'

# Right: SVN + time
set -g status-right-length 100
set -g status-right "#[fg=colour245]#(@svn_branch) #[fg=colour196]#(@svn_dirty)  #[fg=colour81]%H:%M "

############################################################
# COPY MODE / MESSAGES
############################################################

setw -g mode-style bg=colour81,fg=colour234
set -g message-style bg=colour81,fg=colour234

############################################################
# VIM / TERMINAL FRIENDLY
############################################################

set -g allow-rename on
set -g automatic-rename on

############################################################
# CLOCK
############################################################

setw -g clock-mode-colour colour81
